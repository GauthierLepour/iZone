<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <p style="margin-bottom: 0px;">iZone</p>
    <% end %>


    <div class="dropdown">
      <% if !user_signed_in? %>
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>    <% end %>
      <% if user_signed_in? %>
          <%= image_tag current_user.photo, class: "avatar dropdown-toggle nav-item", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <%= link_to "My profile", profile_path(current_user), class: "dropdown-item", data: {turbo_method: :read} %>
            <%= link_to "Add a car", new_car_path(current_user), class: "dropdown-item", data: {turbo_method: :create} %>
            <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
          </div>
      <% end %>
    </div>
  </div>
</div>
