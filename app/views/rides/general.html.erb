<%= form_for ([@event, @ride]), url: wizard_path, method: :put do |f| %>
    <%= f.label :departure_place %>
    <%= f.text_field :departure_place %>

    <%= f.label :arrival_place %>
    <%= f.text_field :arrival_place %>

    <%= f.label :departure_time %>
    <%= f.text_field :departure_time %>

    <%= f.submit 'Next', name: "next" %>
<% end %>
