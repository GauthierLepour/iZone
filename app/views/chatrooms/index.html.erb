<div class="container">
  <% @current_chatrooms.each do |chatroom| %>
    <%= link_to chatroom_path(chatroom), style:"text-decoration:none" do %>
      <div class="d-flex message-card">

        <div class="d-flex align-items-center">
          <%= cl_image_tag chatroom.ride.car.user.photo.key, class: "avatar-mess" %>
        </div>

        <div class="d-flex flex-column justify-content-center">
          <div class="d-flex align-items-center mt-2">
            <h4 style="margin-bottom:0"><%= "#{chatroom.name}" %></h4>
          </div>
          <% unless chatroom.messages.empty? %>
            <div class="d-flex align-items-center">
              <p><%= "#{chatroom.messages.last.user.first_name}: #{chatroom.messages.last.content.slice(0..20)}..." %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
