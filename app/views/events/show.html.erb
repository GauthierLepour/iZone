<div class="event_banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @event.photo.key, class: 'event_banner_image', crop: :fill %>')">
  <div class="event_banner_text">
    <h1><%= @event.name %></h1>
    <p style="font-size: 14px;">From : <%= @event.start_time.strftime("%B %-d, %H:%M") %> <br> To : <%= @event.end_time.strftime("%B %-d, %H:%M") %></p>
  </div>
</div>

<div class="event_buttons">
  <%= link_to 'Search a ride', event_rides_path(@event), class: "event_button" %>
  <%= link_to 'Offer a ride', current_user.cars.empty? ? new_car_path : new_event_ride_path(@event), class: "event_button" %>
</div>

<div class="event_description">
  <h5 style="font-weight: bold;">Description</h5>
  <p><%= @event.description %></p>
</div>

<div class="event_display_members">
  <i class="event_display_members_icon fa-regular fa-user"></i>
  <%= link_to "View participants", event_path, class: "event_display_members_button" %>

</div>
